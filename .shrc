export LESS=-RS
export LESS_TERMCAP_md=$'\e[1;34m'
export LESS_TERMCAP_me=$'\e[0m'
export LESS_TERMCAP_us=$'\e[1;32m'
export LESS_TERMCAP_ue=$'\e[0m'
export SYSTEMD_LESS="FRSMK"

alias vz="f -e vim"
alias r=ranger
alias ll="ls -lh --group-directories-first --color=auto"
alias la="ls -lAh --group-directories-first --color=auto"
alias rm="rm -rf"
alias mv="mv -f"
alias cp="cp -rf"
alias dd="dd bs=64K conv=noerror,sync status=progress"
alias xclip="xclip -selection clipboard"
alias grep="grep -iI --color=auto"
alias diff="diff --color=auto"
alias sudo="sudo -E "
alias free="free -h"
alias htop="htop -d10"
alias df="df -x tmpfs -x devtmpfs -h"
alias dus="du -sh"
alias ncdu="ncdu --color dark -x"

alias gst="git status"
alias gb="git branch"
alias gd="git diff"
alias gdca="git diff --cached"
alias gp="git push"
alias gl="git pull"
alias ga="git add"
alias gcmsg="git commit -m"
alias gco="git checkout"
alias grhh="git reset --hard HEAD"
alias gclf="git clean -f"

alias sc-start="sudo systemctl start"
alias sc-stop="sudo systemctl stop"
alias sc-restart="sudo systemctl restart"
alias sc-status="sudo systemctl status"

alias dcl="docker container prune -f && docker image prune -f && docker volume prune -f"
alias di="docker images"
alias dps="docker ps -a --format 'table {{.Names}} {{.Image}} {{.Status}} {{.Ports}}'"
alias docker-compose="sudo podman-compose"

if type pacman &> /dev/null; then

alias pacin="sudo pacman -S"
alias pacrem="sudo pacman -Rns"
alias pacrmorphans="sudo pacman -Rs \$(pacman -Qtdq)"
alias pacstats="expac -HM '%m\t%n' | sort -n"
alias yaupg="$HOME/.scripts/yaupg"

elif type apt &> /dev/null; then

alias ai="sudo apt install"
alias apr="sudo apt autoremove --purge"
alias adu="sudo apt update && sudo apt dist-upgrade"
alias ac="sudo apt clean"
alias astats="dpkg-query -Wf '\${Installed-Size}\t\${Package}\n' | sort -n"

elif type rpm &> /dev/null; then

alias rstats="rpm -qa --queryformat '%10{size} - %-25{name} \t %{version}\n' | sort -n"

fi

launch() {
    if [[ $# -eq 0 ]]; then return; fi
    nohup "$@" &> /dev/null &
    disown
}

open() {
    launch xdg-open "$@"
}
alias o=open

