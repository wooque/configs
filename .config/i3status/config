# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        color_good = "#EEEEEC"
        color_degraded = "#C4A000"
        color_bad = "#CD0000"
        interval = 5
}

order += "read_file UPDATES"
order += "read_file BACKUP"
order += "volume master"
order += "battery all"
order += "wireless _first_"
order += "tztime local"

volume master {
        format = "VOL %volume"
        format_muted = "VOL (%volume)"
        device = "pulse"
}

wireless _first_ {
        format_up = "%essid"
        format_down = "WiFi down"
}

battery all {
        format = "%status %percentage %remaining"
        integer_battery_capacity = true
}

tztime local {
        format = "%b %d  %H:%M"
}

read_file UPDATES {
    path = "/home/vuk/updates.log"
    format = "updates ✓"
    format_bad = ""
}

read_file BACKUP {
    path = "/home/vuk/backup.log"
    format = "backup ✓"
    format_bad = ""
}
