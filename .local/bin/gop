#!/usr/bin/env bash

if [ -z ${GOP} ]; then
    
    project=src/${PWD##*/}
    if [ ! -e src ]; then mkdir src ; fi
    if [ ! -e $project ]; then ln -s ${PWD} $project; fi
    
    export OLD_GOPATH=${GOPATH}
    export GOPATH=${PWD}

    export GOP=${PWD}
    cd $project
    
    export OLD_PS1=${PS1}
    export PS1=${PS1}(gop)\ 
else
    
    export PS1=${OLD_PS1}
    unset OLD_PS1
    
    cd ${GOP}
    unset GOP
    
    export GOPATH=${OLD_GOPATH}
    unset OLD_GOPATH
fi
